<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.loginv3.ReportNewActivity"
    >

    <TextView android:text="Problem type :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/problem"
        android:textSize="20sp"

        />

    <Spinner

        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/problem"
        android:popupBackground="#ffdbb1af"
        android:visibility="visible"
        android:outlineProvider="bounds"
         />

    <TextView android:text="Problem detail : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/problemD"
        android:layout_below="@+id/spinner1"
        android:textSize="18sp"

        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"

        android:layout_below="@+id/problemD"

        android:popupBackground="#ffdbb1af"
        android:visibility="visible"
        android:outlineProvider="bounds"
        android:longClickable="true" />

    <EditText android:id="@+id/problemDif"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:gravity="top"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:editable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatioon"
        android:id="@+id/locatioMain"
        android:textSize="20sp"
        android:layout_below="@+id/problemDif"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block"
        android:id="@+id/textView3"
        android:layout_below="@+id/locatioMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:popupBackground="#ffdbb1af"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floor"
        android:id="@+id/textView4"
        android:layout_below="@+id/locatioMain"
        android:layout_toRightOf="@+id/problemD"
        android:layout_toEndOf="@+id/problemD" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:popupBackground="#ffdbb1af"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/problem"
        android:layout_toEndOf="@+id/problem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indoor/Outdoor"
        android:id="@+id/textView5"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:popupBackground="#ffdbb1af"
        android:layout_below="@+id/textView5"


         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fine location"
        android:id="@+id/textView6"
        android:layout_below="@+id/spinner4"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:popupBackground="#ffdbb1af"
        android:layout_below="@+id/textView6"
         />

    <EditText android:id="@+id/locationDif"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:gravity="top"
        android:layout_below="@+id/spinner5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button2"
        android:onClick="submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.sbsmstaff.MenuActivity"
    android:background="#ffd3e2ef">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NEW Report"
        android:id="@+id/button"
        android:onClick="textOnClick2"

        android:layout_weight="1"
        android:layout_above="@+id/buttonR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assigned Report"
        android:id="@+id/buttonR"
        android:layout_weight="1"
        android:onClick="textOnClickR"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Team"
        android:id="@+id/buttonM"
        android:onClick="textOnClickM"
        android:layout_weight="1"
        android:layout_below="@+id/buttonR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
